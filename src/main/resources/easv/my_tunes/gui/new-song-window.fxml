<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="500.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="easv.my_tunes.gui.NewSongController">
    <children>
        <Label layoutX="50.0" layoutY="50.0" text="Title:"/>
        <TextField fx:id="titleField" layoutX="140.0" layoutY="46.0" prefWidth="310.0"/>

        <Label layoutX="50.0" layoutY="100.0" text="Artist:"/>
        <TextField fx:id="artistField" layoutX="140.0" layoutY="96.0" prefWidth="310.0"/>

        <Label layoutX="50.0" layoutY="150.0" text="Category:"/>
        <ComboBox fx:id="categoryComboBox" layoutX="140.0" layoutY="146.0" prefWidth="250.0" promptText="Choose genre"/>

        <Button fx:id="moreButton" layoutX="400.0" layoutY="146.0" mnemonicParsing="false" onAction="#onMoreButtonClick"
                text="More"/>

        <Label layoutX="50.0" layoutY="200.0" text="Time:"/>
        <TextField fx:id="timeField" editable="false" layoutX="140.0" layoutY="196.0" prefWidth="310.0"
                   promptText="Automatically filled from file"/>

        <Label layoutX="50.0" layoutY="250.0" text="File:"/>
        <TextField fx:id="filePathField" editable="false" layoutX="140.0" layoutY="246.0" prefWidth="200.0"
                   promptText="No file selected"/>
        <Button fx:id="chooseFileButton" layoutX="350.0" layoutY="246.0" mnemonicParsing="false"
                onAction="#onChooseFileClick" text="Choose File"/>

        <Button fx:id="saveButton" layoutX="300.0" layoutY="330.0" mnemonicParsing="false" onAction="#onSaveClick"
                prefWidth="70.0" text="Save"/>
        <Button fx:id="cancelButton" layoutX="380.0" layoutY="330.0" mnemonicParsing="false" onAction="#onCancelClick"
                prefWidth="70.0" text="Cancel"/>
    </children>
</AnchorPane>